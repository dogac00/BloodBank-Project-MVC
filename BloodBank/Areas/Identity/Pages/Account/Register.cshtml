@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="price-sty position-relative mb-5">
    <h3 class="tittle text-center text-bl mb-2">Register</h3>
    <span class="text-style-bot font-weight-bold">R</span>
</div>

<div class="row register-row">
    <div class="align-content-center" style="width: 60%; margin: 0 auto">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div class="row">
                <div class="col-sm-6 form-group">
                    <label>First Name</label>
                    <input asp-for="Input.FirstName" type="text" placeholder="First Name" class="form-control" />
                    <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                </div>
                <div class="col-sm-6 form-group">
                    <label>Last Name</label>
                    <input asp-for="Input.LastName" class="form-control" type="text" placeholder="Last Name" required="">
                    <span asp-validation-for="Input.LastName" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6 form-group">
                    <label>User Name</label>
                    <input class="form-control" asp-for="Input.UserName" type="text" placeholder="User Name" required="">
                    <span asp-validation-for="Input.UserName" class="text-danger"></span>
                </div>
                <div class="col-sm-6 form-group">
                    <label asp-for="Input.City"></label>
                    <select asp-for="Input.City" class="custom-select">
                        <option value="İstanbul">İstanbul</option>
                        <option value="Ankara">Ankara</option>
                        <option value="İzmir">İzmir</option>
                    </select>
                </div>
                <div class="col-sm-6 form-group">
                    <label asp-for="Input.BloodType"></label>
                    <select asp-for="Input.BloodType" class="custom-select">
                        <option value="A+">A+</option>
                        <option value="A-">A-</option>
                        <option value="B+">B+</option>
                        <option value="B-">B-</option>
                        <option value="AB+">AB+</option>
                        <option value="AB-">AB-</option>
                        <option value="0+">0+</option>
                        <option value="0-">0-</option>
                    </select>
                </div>
                <div class="col-sm-6 form-group">
                    <label asp-for="Input.Email"></label>
                    <input class="form-control" asp-for="Input.Email" placeholder="Email" required="">
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6 form-group">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="col-sm-6 form-group">
                    <label asp-for="Input.ConfirmPassword"></label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
            </div>
            <div style="width: auto;">
                <button type="submit" class="btn mr-2">Register</button>
                <button type="reset" class="btn">Clear</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
